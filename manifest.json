{
    "manifest_version" : 2,
    "name" : "TimeZone" ,
    "version" : "2.0.1",
    "description" : "This is a sample extension that displays your currect time zone" ,
    "icons" :{
        "128" : "clock.png"
    },
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_icon" : "clock.png",
        "default_title" : "Timezone"
    },
    "permission" :["activeTab"],
    "background" : {
        "scripts": ["main.js"]
    }
}